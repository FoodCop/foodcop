# FuzoFoodCop Environment Variables
# Copy this file to .env.local and replace with your actual values

# Google Services
# Google Maps & Places API (client-side accessible)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_MAPS_API_KEY="your_google_api_key_here"

# YouTube API is now handled securely via Supabase Edge Functions (backend)
# DO NOT set VITE_YOUTUBE_API_KEY here - it's deprecated for security
# Instead, set as Supabase secret: supabase secrets set YOUTUBE_API_KEY="..." --project-ref your-project-ref

# Supabase Backend (Client-side accessible)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# API Services (Client-side accessible)
# Get from: https://spoonacular.com/food-api/console#Dashboard
VITE_SPOONACULAR_API_KEY="your_spoonacular_api_key_here"

# Stream Chat (Client-side accessible)
# Get from: https://dashboard.getstream.io/
VITE_STREAM_CHAT_API_KEY="your_stream_chat_api_key_here"

# Chat Authentication Mode
# Set to 'true' to use production-secure backend token generation
# Set to 'false' or leave empty for development mode (uses dev tokens)
# WARNING: Dev tokens are NOT secure - only use for local testing
VITE_USE_PRODUCTION_CHAT_AUTH="false"

# Server-side only (DO NOT USE VITE_ PREFIX)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"

# Optional OAuth Settings
VITE_GOOGLE_CLIENT_ID="your_google_oauth_client_id"
VITE_APP_URL="http://localhost:3000"

# Google AdSense
# Get from: https://www.google.com/adsense/
VITE_ADSENSE_CLIENT_ID="ca-pub-XXXXXXXXXXXXXXXX"
VITE_ADSENSE_SLOT_BOTTOM_BANNER="1234567890"

# Security Notes:
# 1. Never commit .env.local to git
# 2. OpenAI API key should NOT have VITE_ prefix (server-side only)
# 3. Google services can share the same API key
# 4. Only VITE_ prefixed variables are accessible in the browser